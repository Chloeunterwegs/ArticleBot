{
  "manifest_version": 3,
  "name": "智能文章助手",
  "version": "0.0.1",
  "description": "一键完成文章总结、标签生成、思维导图创建,并同步到Obsidian",
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "智能文章助手"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/markmap.min.js"],
      "matches": ["*://*/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "popup/popup.html"
}