{
  "manifest_version": 3,
  "name": "智能文章助手",
  "version": "0.0.6",
  "description": "一键完成文章总结、标签生成、并同步到Obsidian",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:3000/",
    "http://localhost:11434/",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    },
    "default_title": "智能文章助手"
  },
  "options_page": "popup/popup.html",
  "web_accessible_resources": [
    {
      "resources": ["汇文明朝体.otf"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "stop_processing": {
      "suggested_key": {
        "default": "Ctrl+Shift+W",
        "mac": "Command+Shift+W"
      },
      "description": "停止处理标签页"
    },
    "process_all_tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "处理所有打开的标签页"
    }
  }
}
